<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/navbar') %>

    <div class="container">
        <h1 class="title">Create New Quiz</h1>
        
        <div class="form-container quiz-form">
            <% if (locals.error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            
            <form id="quizForm" action="/quiz/create" method="POST">
                <div class="form-group">
                    <label for="title">Quiz Title</label>
                    <input type="text" id="title" name="title" required placeholder="Enter a descriptive title">
                </div>
                
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" class="styled-textarea" rows="3" placeholder="Explain what this quiz is about"></textarea>
                </div>
                
                <div class="form-group">
                    <label for="visibility">Quiz Visibility</label>
                    <select id="visibility" name="visibility" class="styled-select">
                        <option value="public" selected>Public (visible to all users)</option>
                        <option value="private">Private (only visible to you)</option>
                    </select>
                </div>
                
                <h3>Questions</h3>
                <div id="questions-container">
                    <!-- Questions will be added here dynamically -->
                </div>
                
                <button type="button" id="addQuestion" class="btn add-btn">Add Question</button>
                
                <input type="hidden" name="questions" id="questionsJSON">
                <input type="hidden" name="isPublic" value="true">
                
                <!-- Modified form-actions section -->
                <div class="form-actions">
                    <a href="/profile" class="cancel-btn">Cancel</a>
                    <button type="submit" id="submitQuiz" class="btn">Create Quiz</button>
                </div>
            </form>
        </div>
    </div>
    
    <script src="/js/quizEditor.js"></script>
</body>
</html>